@using System.Text.Json
@model IEnumerable<dynamic>

@{
    var stockData = JsonSerializer.Deserialize<dynamic>(ViewBag.StockData);
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<canvas id="stockData" width="400" height="200"></canvas>
<script>
    // ViewBag'den gelen JSON'u JS'de parse ediyoruz
    var stockData = @Html.Raw(ViewBag.StockData);

    var labels = stockData.map(s => s.ProductName);
    var data = stockData.map(s => s.UnitsInStock);

    var ctx = document.getElementById('stockData').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Product Stocks',
                data: data,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
