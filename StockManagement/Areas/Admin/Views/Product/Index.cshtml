@model List<ProductViewModel>



<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-body">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>  Create new product
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Product name
				</th>
				<th>
					Units in stock
				</th>
				<th>
					Category 
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.ProductName
					</td>
					<td>
						@obj.UnitsInStock
					</td>
					<td>
						@obj.CategoryName
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>

