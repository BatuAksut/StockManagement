@model ProductEditViewModel

<form method="post">
	<input asp-for="ProductId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-body">Edit Product</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ProductName" class="p-0"></label>
			<input asp-for="ProductName" class="form-control" />
			<span asp-validation-for="ProductName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="UnitsInStock" class="p-0"></label>
			<input asp-for="UnitsInStock" class="form-control" />
			<span asp-validation-for="UnitsInStock" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="CategoryId" class="p-0"></label>
			<select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
			<span asp-validation-for="CategoryId" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3"><button type="submit" class="btn btn-primary form-control">Update</button></div>
			<div class="col-6 col-md-3">
				<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
					Back to list
				</a>
			</div>
		</div>
	</div>
</form>
